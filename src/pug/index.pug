doctype html
html(lang='ru')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
    link(href='https://fonts.googleapis.com/css2?family=Roboto:wght@900&display=swap' rel='stylesheet')
    title interdex.ru test
  body
    .content
      .container-fixed
        header.header
          .header__menu.menu(data-type='slide-menu-container')
            .menu__container-fixed
              button#btn-nav.menu__btn-nav.btn-nav
                span.btn-nav__icon
                  span.btn-nav__elem-1
                  span.btn-nav__elem-2
                  span.btn-nav__elem-3
              .menu__container-position(data-type='slide-menu-content')
                .menu__container-scroll
                  .menu__container-content
                    .menu__content
                      form-menu.menu__form-menu.form-menu(action='#')
                        .form-menu__container
                          label.form-menu__label(for='countries') Страны
                          select#countries.form-menu__input.form-menu__input_select(name='countries' data-input='select')
                            optgroup.form-menu__group(label='Южная Америка')
                              option.form-menu__option Аргентина
                              option.form-menu__option Бразилия
                              option.form-menu__option Перу
